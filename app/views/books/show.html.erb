<div class="grid_10 push_1">
<!--      <hr id="book_spacer" /> -->
    <ul class="book_nav">
  <% @books.each do |book| %>
    <li><%= link_to book.title, book_path(book) %></li>
  <% end %>
    </ul>
  <hr id="book_spacer" />
</div>



<div class = "clear"></div>
<div class = "grid_7 push_1 book_title"><p><%= @book.title %></p></div>
<div class = "grid_7 push_1 book_subhead"><p><%= @book.stubtitle %></p></div>
<div class = "grid_7 push_1 book_description"><p><%= @book.description %></p></div>


<div class = "clear"></div>
<div class = "grid_7 push_1 align_right">
<% if user_signed_in? %>
<% if @book.user.email == current_user.email %>
  <%= link_to "edit this", edit_book_path %> ||
  <%= link_to 'Delete this Book', @book, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<% end %>
</div>
